# Neural Orchestrator - Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=8000
LOG_LEVEL=INFO
ENVIRONMENT=development

# ============================================================================
# SYSTEM API ENDPOINTS
# Update these with your actual system ports/URLs
# ============================================================================

# Sovereign Shadow AI (Primary Trading Platform)
SOVEREIGN_SHADOW_API=http://localhost:3001

# Omega AI Ecosystem (API Management & Orchestration)
OMEGA_AI_API=http://localhost:3002

# Nexus Protocol (Autonomous AI Trader)
NEXUS_API=http://localhost:3003

# Scout Watch (Bot Army Monitoring)
SCOUT_WATCH_API=http://localhost:3004

# Ledger Ghost90 (Automation Trading Application)
GHOST90_API=http://localhost:3005

# Toshi Trading System (Production Dashboard)
TOSHI_API=http://localhost:3006

# Ledger Hardware Vault (Cold Storage)
LEDGER_API=http://localhost:3007

# ============================================================================
# DATABASE (Optional - for persistent storage)
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/neural_orchestrator

# ============================================================================
# REDIS (Optional - for caching and pub/sub)
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# CORS CONFIGURATION
# Add your website domain here
# ============================================================================
ALLOWED_ORIGINS=https://legacyloopshadowai.abacusai.app,http://localhost:3000,http://localhost:5173

# ============================================================================
# WEBSOCKET CONFIGURATION
# ============================================================================
WS_MAX_CONNECTIONS=100
WS_PING_INTERVAL=30
WS_CONNECTION_TIMEOUT=60

# ============================================================================
# SYSTEM COORDINATOR CONFIGURATION
# ============================================================================

# Capital allocation limits (in USD)
CAPITAL_LIMIT_SOVEREIGN_SHADOW=3000.0
CAPITAL_LIMIT_NEXUS=2500.0
CAPITAL_LIMIT_GHOST90=2000.0
CAPITAL_LIMIT_SCOUT_WATCH=1500.0
CAPITAL_LIMIT_OMEGA_AI=1000.0

# System priorities (higher = higher priority)
PRIORITY_LEDGER=100
PRIORITY_OMEGA_AI=90
PRIORITY_NEXUS=80
PRIORITY_SOVEREIGN_SHADOW=70
PRIORITY_SCOUT_WATCH=60
PRIORITY_GHOST90=50
PRIORITY_TOSHI=40

# ============================================================================
# CONSCIOUSNESS CACHE
# ============================================================================
CONSCIOUSNESS_CACHE_TTL=30  # seconds
HEALTH_CHECK_INTERVAL=60    # seconds
CONSCIOUSNESS_UPDATE_INTERVAL=30  # seconds

# ============================================================================
# MONITORING (Optional)
# ============================================================================
SENTRY_DSN=
PROMETHEUS_PORT=9090

# ============================================================================
# CLAUDE SDK (Optional - for AI refinements)
# ============================================================================
ANTHROPIC_API_KEY=
