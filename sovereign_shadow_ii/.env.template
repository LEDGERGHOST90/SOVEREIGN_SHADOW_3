# üè¥ SOVEREIGN SHADOW II - ENVIRONMENT CONFIGURATION

# ============================================================================
# SAFETY SETTINGS (CRITICAL)
# ============================================================================
# NEVER set ALLOW_LIVE_EXCHANGE=1 without thorough testing in FAKE mode!
ENV=development                    # development or production
ALLOW_LIVE_EXCHANGE=0              # 0 = FAKE mode (safe), 1 = LIVE mode (DANGER)
USE_SANDBOX=true                   # Use exchange sandbox/testnet
MAX_POSITION_SIZE_USD=100          # Maximum position size in USD
RISK_PER_TRADE=0.01                # 1% risk per trade
MAX_DAILY_LOSS_PERCENT=5.0         # Stop trading if lose 5% in one day

# ============================================================================
# EXCHANGE API CREDENTIALS
# ============================================================================

# Coinbase Advanced Trade
# Get from: https://www.coinbase.com/settings/api
# Format: organizations/{org_id}/apiKeys/{key_id}
COINBASE_API_KEY=your_api_key_here
COINBASE_API_SECRET=your_pem_private_key_here

# OKX (optional)
OKX_API_KEY=
OKX_API_SECRET=
OKX_PASSPHRASE=

# Kraken (optional)
KRAKEN_API_KEY=
KRAKEN_API_SECRET=

# ============================================================================
# TRADING PARAMETERS
# ============================================================================
PORTFOLIO_VALUE=10000              # Starting portfolio value
DEFAULT_EXCHANGE=coinbase          # Primary exchange
DEFAULT_SYMBOL=BTC/USDT           # Primary trading pair
CYCLE_INTERVAL_SECONDS=300        # Run cycle every 5 minutes

# ============================================================================
# DATABASE & LOGGING
# ============================================================================
PERFORMANCE_DB_PATH=data/performance.db
LOG_LEVEL=INFO                    # DEBUG, INFO, WARNING, ERROR
LOG_FILE=logs/sovereign_shadow.log

# ============================================================================
# NOTIFICATION SETTINGS (optional)
# ============================================================================
ENABLE_DISCORD_ALERTS=false
DISCORD_WEBHOOK_URL=

ENABLE_EMAIL_ALERTS=false
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=
EMAIL_FROM=
EMAIL_TO=
EMAIL_PASSWORD=
