# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
DATABASE_URL='postgresql://username:password@host:port/database?connect_timeout=15'

# -----------------------------------------------------------------------------
# AUTHENTICATION & SECURITY
# -----------------------------------------------------------------------------
NEXTAUTH_SECRET=your-nextauth-secret-here-minimum-32-chars
NEXTAUTH_URL=https://your-domain.com
ENCRYPTION_KEY=your-64-char-hex-encryption-key-here

# -----------------------------------------------------------------------------
# AI/ML SERVICES
# -----------------------------------------------------------------------------
ABACUSAI_API_KEY=your-abacusai-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# -----------------------------------------------------------------------------
# EXCHANGE API CREDENTIALS
# -----------------------------------------------------------------------------

# Binance US
BINANCE_US_API_KEY=your-binance-us-api-key-here
BINANCE_US_SECRET_KEY=your-binance-us-secret-key-here

# Coinbase (CDP SDK)
COINBASE_API_KEY=organizations/your-org-id/apiKeys/your-key-id
COINBASE_API_SECRET='-----BEGIN EC PRIVATE KEY-----
Your-Private-Key-Here
-----END EC PRIVATE KEY-----'

# OKX
OKX_API_KEY=your-okx-api-key-here
OKX_SECRET_KEY=your-okx-secret-key-here
OKX_PASSPHRASE='your-okx-passphrase-here'

# Kraken (if using)
KRAKEN_API_KEY=your-kraken-api-key-here
KRAKEN_PRIVATE_KEY=your-kraken-private-key-here

# -----------------------------------------------------------------------------
# BLOCKCHAIN & WEB3
# -----------------------------------------------------------------------------

# MetaMask / Ethereum
METAMASK_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
METAMASK_CHAIN_ID=1

# Infura (Ethereum RPC)
INFURA_PROJECT_ID=your-infura-project-id-here
INFURA_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Alchemy (Alternative RPC)
ALCHEMY_API_KEY=your-alchemy-api-key-here
ALCHEMY_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Ankr (Alternative RPC for AAVE monitoring)
ANKR_API_KEY=your-ankr-api-key-here

# Your Primary Ethereum Address (for AAVE monitoring)
ETHEREUM_ADDRESS=0xYourEthereumAddressHere

# Solana
PHANTOM_RPC_URL=https://solana-api.projectserum.com

# WalletConnect
WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id-here

# -----------------------------------------------------------------------------
# LEDGER HARDWARE WALLET
# -----------------------------------------------------------------------------
LEDGER_ETH_ADDRESS=0xYourEthereumAddressHere
LEDGER_HARDWARE_PATH=/dev/hidraw0
LEDGER_CONFIRMATION_THRESHOLD=1000
ALLOW_LEDGER_WITHDRAWALS=0

# -----------------------------------------------------------------------------
# TRADING CONFIGURATION
# -----------------------------------------------------------------------------
PRIMARY_TRADE_EXCHANGE=kraken
SNIPER_EXCHANGE=okx
FIAT_RAIL_EXCHANGE=binanceus
DEFAULT_DEFI_RAIL=metamask
DEFAULT_SOLANA_RAIL=phantom

# -----------------------------------------------------------------------------
# SAFETY LIMITS & RISK MANAGEMENT
# -----------------------------------------------------------------------------
DISABLE_REAL_EXCHANGES=0
ALLOW_LIVE_EXCHANGE=1
ALLOW_DEFI_ACTIONS=0
ALLOW_BRIDGE_OPERATIONS=0
EMERGENCY_STOP_DEFI=0

MAX_SINGLE_DEFI_TRADE_PERCENT=5
MAX_DAILY_DEFI_VOLUME_PERCENT=15
MAX_SLIPPAGE_TOLERANCE=5.0
DEFAULT_SLIPPAGE_TOLERANCE=0.5
MAX_GAS_PRICE_GWEI=100
MAX_TRANSACTION_FEE_USD=50

MAX_POSITION_SIZE=0.1
RISK_PER_TRADE=0.02
ARBITRAGE_THRESHOLD=0.5
MOMENTUM_THRESHOLD=2.0

# -----------------------------------------------------------------------------
# SYSTEM CONFIGURATION
# -----------------------------------------------------------------------------
TRADING_ENV=production
LOG_LEVEL=INFO
SCAN_INTERVAL=15
NODE_ENV=development
NETWORK_ID=base-sepolia

