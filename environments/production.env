# üåê SHADOW.AI II - PRODUCTION ENVIRONMENT
# Secure configuration for production deployment

# Environment
NODE_ENV=production
LOG_LEVEL=info
SANDBOX_MODE=false

# Database Configuration
POSTGRES_DB=shadow_ai_prod
POSTGRES_USER=trader
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_URL=postgresql://trader:CHANGE_ME_SECURE_PASSWORD@postgres:5432/shadow_ai_prod

# Redis Configuration
REDIS_URL=redis://redis:6379

# Authentication
NEXTAUTH_SECRET=CHANGE_ME_NEXTAUTH_SECRET
NEXTAUTH_URL=https://your-domain.com

# Exchange API Keys (Production)
BINANCEUS_KEY=your_binance_us_key
BINANCEUS_SECRET=your_binance_us_secret

KRAKEN_KEY=your_kraken_key
KRAKEN_SECRET=your_kraken_secret

OKX_KEY=your_okx_key
OKX_SECRET=your_okx_secret
OKX_PASSPHRASE=your_okx_passphrase

# Monitoring
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

# Security
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Performance
MAX_MEMORY=512M
CPU_LIMIT=0.5
